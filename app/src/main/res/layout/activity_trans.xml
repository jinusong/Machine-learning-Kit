<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".TransActivity">

    <TextView
            android:id="@+id/trans_english_title"
            android:text="영어"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:padding="10dp"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/trans_trans_korean"
            app:layout_constraintTop_toBottomOf="@id/trans_english_title"
            android:id="@+id/trans_english_edit"
            android:background="@drawable/gray_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <TextView
            android:padding="10dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/trans_english_edit"
            app:layout_constraintBottom_toTopOf="@id/trans_trans_btn"
            android:background="@drawable/gray_box"
            android:textSize="14dp"
            android:text="번역결과"
            android:id="@+id/trans_trans_korean"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    <Button
            android:text="번역"
            android:id="@+id/trans_trans_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>