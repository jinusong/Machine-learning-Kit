<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
android:padding="20dp">
<Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_text_btn"
        android:text="번역기 가기"
        android:id="@+id/main_trans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<Button
        app:layout_constraintTop_toBottomOf="@id/main_trans_btn"
        app:layout_constraintBottom_toTopOf="@id/main_face_btn"
        android:text="텍스트 인식"
        android:id="@+id/main_text_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/main_text_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="얼굴 인식"
            android:id="@+id/main_face_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>